<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoFragment">

    <TextView
        android:id="@+id/todo_tv_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/todo"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/finance_red"
        app:layout_constraintBottom_toBottomOf="@id/todo_tv_todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/todo_tv_todo"
        app:layout_constraintTop_toTopOf="@id/todo_tv_todo"
        app:layout_constraintVertical_bias="0.580" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todo_rv_todo"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_tv_todo"
        tools:listitem="@layout/todo_card" />

    <TextView
        android:id="@+id/todo_empty_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/empty"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/todo_tv_inprogress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_tv_todo" />

    <TextView
        android:id="@+id/todo_tv_inprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/in_progress"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_rv_todo" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/primary_orange"
        app:layout_constraintBottom_toBottomOf="@id/todo_tv_inprogress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/todo_tv_inprogress"
        app:layout_constraintTop_toTopOf="@id/todo_tv_inprogress"
        app:layout_constraintVertical_bias="0.580" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todo_rv_inprogress"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_tv_inprogress"
        tools:listitem="@layout/todo_card" />

    <TextView
        android:id="@+id/todo_empty_inprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/empty"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/todo_tv_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_tv_inprogress" />

    <TextView
        android:id="@+id/todo_tv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Done"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_rv_inprogress" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/finance_green"
        app:layout_constraintBottom_toBottomOf="@id/todo_tv_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/todo_tv_done"
        app:layout_constraintTop_toTopOf="@id/todo_tv_done"
        app:layout_constraintVertical_bias="0.580" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todo_rv_done"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_tv_done"
        tools:listitem="@layout/todo_card" />

    <TextView
        android:id="@+id/todo_empty_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/empty"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/todo_rv_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_tv_done" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/todo_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Add To Do"
        android:elevation="5dp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@null"
        app:srcCompat="@drawable/ic_add" />


</androidx.constraintlayout.widget.ConstraintLayout>